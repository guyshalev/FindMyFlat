function sa_nextStep(step){
    switch (step){
    case 1:
    jQuery('.content_step_2').hide();
    jQuery('.content_step_3').hide();
    jQuery('.content_step_1').fadeIn();
    break;
    case 2:
    jQuery('.content_step_1').hide();
    jQuery('.content_step_3').hide();
    jQuery('.content_step_2').fadeIn();
    break;
    case 3:
    jQuery('.content_step_1').hide();
    jQuery('.content_step_2').hide();
    jQuery('.content_step_3').fadeIn();
    break;
    }

}
