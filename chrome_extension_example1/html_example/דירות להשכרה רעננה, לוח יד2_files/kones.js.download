function fix_spaces(field_login, field_pass) {
	if (document.getElementById(field_login).value != 'כתובת דוא"ל / שם משתמש') {
		document.getElementById(field_login).value = document.getElementById(field_login).value.replace(/ /, '');
	}
	if (field_pass && document.getElementById(field_pass).value != 'סיסמא') {
		document.getElementById(field_pass).value = document.getElementById(field_pass).value.replace(/ /, '');
	} else if (field_pass && (document.getElementById(field_pass).value == 'סיסמא' || document.getElementById(field_pass).value == '')) {
		alert('הזן סיסמא בבקשה.')
		return false;
	}
	return true;
}

